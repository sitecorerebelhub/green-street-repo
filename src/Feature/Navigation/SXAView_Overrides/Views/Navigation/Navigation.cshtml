@using Sitecore.XA.Feature.Navigation.Models
@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@model Sitecore.XA.Feature.Navigation.Models.NavigationRenderingModel

@if (Model.Children.Any())
{
    <div @Html.Sxa().Component(Model.Rendering.RenderingCssClass ?? "navigation", Model.Attributes)>
        <div class="component-content">
            <nav class="navigation visible-desktop">
                <div class="container">
                    <div class="row">
                        @*Begin Menu Container*@
                        <div class="megamenu_container">
                            <div class="menu-sidebar-container">
                                @Html.Partial("~/SXAView_Overrides/Views/Navigation/NavigationLevel.cshtml", new NavigationExtendedModel { Children = Model.Children })
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
            <nav class="navigation hidden-desktop">
                <div class="container">
                    <div class="row">
                        Mobile Navigation Coming soon
                    </div>
                </div>
            </nav>
        </div>
    </div>
}